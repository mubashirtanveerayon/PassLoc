<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="@color/theme_dark"
            android:drawablePadding="@dimen/_5sdp"
            android:text="Camera"
            android:id="@+id/from_camera_button"


            android:drawableStart="@drawable/camera32"
            android:drawableTint="@color/theme_dark"


            android:background="@color/theme_semi_light"
            android:padding="@dimen/_5sdp"

            />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="@dimen/_2sdp"
            android:layout_height="match_parent"


            app:dividerColor="@color/theme_dark"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/photo32"
            android:drawableTint="@color/theme_dark"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="@color/theme_dark"
            android:drawablePadding="@dimen/_5sdp"
            android:text="Gallery"
            android:background="@color/theme_semi_light"
            android:id="@+id/from_gallery_button"

            android:padding="@dimen/_5sdp"
            />


    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>